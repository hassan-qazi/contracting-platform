@model ContractingPlatform.Models.Contract

@{
    ViewData["Title"] = "Delete";
    var entityList = ViewBag.EntityList as List<Entity>;
}

<h3>Are you sure you want to delete this Contract?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EntityA)
        </dt>
        <dd class = "col-sm-10">
            @entityList.Find(e=>e.Id==Model.EntityA).Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EntityB)
        </dt>
        <dd class = "col-sm-10">
             @entityList.Find(e=>e.Id==Model.EntityB).Name
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContractId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
